@model SystemMoniter.Models.AdminPanelGInfoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="page-title">
    Dashboard
</h3>

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/AdminPanel/">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="/Home/Index">Dashboard Stats</a>
        </li>
    </ul>
</div>

<div class="row margin-top-10">

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="dashboard-stat2">
            <div class="display">
                <div class="number">
                    <h3 class="font-red-haze">@Model.TotalPhyemory GB</h3>
                    <small>Total Memory</small>
                </div>
                <div class="icon">
                    <i class="fa fa-dropbox"></i>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress">
                    <span style="width: @Model.MemoryUsedPer%;" class="progress-bar progress-bar-success red-haze">
                        <span class="sr-only">@Model.MemoryUsedPer</span>
                    </span>
                </div>
                <div class="status">
                    <div class="status-number">
                        Used @Model.MemoryUsage GB
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="dashboard-stat2">
            <div class="display">
                <div class="number">
                    <h3 class="font-red-haze">@Model.CPuLoad %</h3>
                    <small>Cpu Load</small>
                </div>
                <div class="icon">
                    <i class="fa fa-tachometer"></i>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress">
                    <span style="width: @Model.CPuLoad%;" class="progress-bar progress-bar-success red-haze">
                        <span class="sr-only">@Model.CPuLoad</span>
                    </span>
                </div>
                <div class="status">
                    <div class="status-number">
                        System Up Time = @Model.systemUptime
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="dashboard-stat2">
            <div class="display">
                <div class="number">
                    <h3 class="font-red-haze">@Model.HDDTotalSpace GB</h3>
                    <small>Total HDD Size</small>
                </div>
                <div class="icon">
                    <i class="fa fa-hdd-o"></i>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress">
                    <span style="width: @Model.HDDUsedPer%;" class="progress-bar progress-bar-success red-haze">
                        <span class="sr-only">@Model.HDDUsedPer</span>
                    </span>
                </div>
                <div class="status">
                    <div class="status-number">
                        Used @Model.HDDUsage GB
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-light red-soft" href="javascript:;">
            <div class="visual">
                <i class="fa fa-gear"></i>
            </div>
            <div class="details">
                <div class="number">
                    @Model.ProcessCount
                </div>
                <div class="desc">
                    Processes
                </div>
            </div>
        </a>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-light green-soft" href="javascript:;">
            <div class="visual">
                <i class="fa fa-clock-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    @Model.ThreadsCount
                </div>
                <div class="desc">
                    Threads
                </div>
            </div>
        </a>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-light blue-soft" href="javascript:;">
            <div class="visual">
                <i class="fa fa-anchor"></i>
            </div>
            <div class="details">
                <div class="number">
                    @Model.HandlesCount
                </div>
                <div class="desc">
                    Handles
                </div>
            </div>
        </a>
    </div>


</div>



